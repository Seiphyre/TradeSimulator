<Window x:Class="TradeSimulator.Frontend.WPF.ReconnectingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradeSimulator.Frontend.WPF"
        mc:Ignorable="d"
        MinHeight="200"
        MinWidth="300"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        Title="Connection lost">
    <StackPanel Margin="24" VerticalAlignment="Center">

        <Label HorizontalAlignment="Center">Reconnecting...</Label>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
            <Button Name="cancelButton" Padding="8" IsCancel="True">Cancel</Button>
        </StackPanel>
    </StackPanel >
</Window>
