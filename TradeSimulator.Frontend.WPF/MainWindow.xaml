<Window x:Name="window" x:Class="TradeSimulator.Frontend.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradeSimulator.Frontend.WPF"
        mc:Ignorable="d"
        Title="Trade Simulator" Height="450" Width="800">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel MaxWidth="960" Margin="24">

            <Label x:Name="pageTitle" FontWeight="Bold" FontSize="16" Content="Trade Simulator" HorizontalContentAlignment="Center"/>

            <!-- Connect/Disconnect Panel -->
            <Grid Height="Auto" Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label x:Name="BrokerIdLabel" Grid.Column="0" Background="White" VerticalContentAlignment="Center" Padding="0,0,0,0" Target="{Binding ElementName=BrokerIdTextBox}">Broker name</Label>
                <TextBox Name="BrokerIdTextBox" Grid.Column="1" Margin="8,0,0,0" Padding="4" VerticalContentAlignment="Center" Height="40"/>
                <Button x:Name="ConnectBtn" Grid.Column="2" Margin="8,0,0,0" Padding="8,8,8,8" Click="ConnectBtn_OnClick">Connect</Button>
                <Button x:Name="DisconnectBtn" Grid.Column="3" Margin="8,0,0,0" Padding="8,8,8,8" Click="DisconnectBtn_OnClick" Visibility="Collapsed">Disconnect</Button>

            </Grid>

            <!-- Dashboard -->
            <StackPanel x:Name="Dashboard">
                
                <!-- Order Books -->
                <StackPanel>
                    <Grid Height="Auto" Margin="0,16,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold">Order books</TextBlock>
                        <Button Grid.Column="1" Margin="8,0,0,0" Padding="8,8,8,8" Click="OpenOrderBook_OnClick">Open</Button>
                    </Grid>

                    <DataGrid x:Name="OrderBooksListView" GridLinesVisibility="None" ColumnHeaderStyle="{StaticResource UnfocusableHeader}" CellStyle="{StaticResource UnfocusableCell}" RowStyle="{StaticResource UnfocusableRow}" Margin="0,16,0,0" HeadersVisibility="Column" ItemsSource="{Binding Path=OrderBooks}" IsReadOnly="True" AutoGenerateColumns="False" CanUserResizeRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="1*"/>
                            <DataGridTextColumn Header="BrokerId" Binding="{Binding BrokerId}" Width="1*"/>
                            <DataGridTextColumn Header="TickerId" Binding="{Binding TickerId}" Width="1*"/>
                            <DataGridTemplateColumn>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Open" Padding="8,8,8,8"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                </StackPanel>

                <!-- Transaction History -->
                <StackPanel>
                    <Grid Height="Auto" Margin="0,16,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold">Transactions</TextBlock>
                        <Button Grid.Column="1" Margin="8,0,0,0" Padding="8,8,8,8" Click="OpenTransactions_OnClick">Open</Button>
                    </Grid>

                    <DataGrid x:Name="TransactionsListView" GridLinesVisibility="None" ColumnHeaderStyle="{StaticResource UnfocusableHeader}" CellStyle="{StaticResource UnfocusableCell}" RowStyle="{StaticResource UnfocusableRow}" Margin="0,16,0,0" HeadersVisibility="Column" ItemsSource="{Binding Path=Transactions}" IsReadOnly="True" AutoGenerateColumns="False" CanUserResizeRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding CreationDate}" Width="1*"/>
                            <DataGridTextColumn Header="Side" Binding="{Binding TransactionType}" Width="1*"/>
                            <DataGridTextColumn Header="Ticker" Binding="{Binding TickerDisplayName}" Width="1*"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="1*"/>
                            <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="1*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
                
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Window>
