@page "/order-book/{TickerId}"
@inherits OrderBookPageBase

@if(IsLoading)
{
    <PageTitle>loading...</PageTitle>

    <Loader/>
}
else
{
    <PageTitle>@Ticker.DisplayName</PageTitle>

    <MudText Typo="Typo.h5" Align="Align.Left" GutterBottom="true" Class="mb-8">Ticker: @Ticker.DisplayName</MudText>

    <MudTable Items="@Ticker.Orders" Hover="true" Breakpoint="Breakpoint.Xs">
        <HeaderContent>
            <MudTh>Layer</MudTh>
            <MudTh>Price</MudTh>
            <MudTh>Quantity</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Layer">@context.TransactionType</MudTd>
            <MudTd DataLabel="Price">@context.Price</MudTd>
            <MudTd DataLabel="Quantity">@context.Quantity</MudTd>
        </RowTemplate>
    </MudTable>
}